<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/api"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test api"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/api2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test api"
        app:layout_constraintTop_toBottomOf="@+id/api" />

    <Button
        android:id="@+id/api3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test youtube api"
        app:layout_constraintTop_toBottomOf="@+id/api2" />

    <Button
        android:id="@+id/dbtest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test room database"
        app:layout_constraintTop_toBottomOf="@+id/api3" />

</androidx.constraintlayout.widget.ConstraintLayout>